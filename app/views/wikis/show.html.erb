<h1><%= markdown_to_html @wiki.title %></h1>


<%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-info' %>
<br>
<br>

<div class="row">
  <div class="col-md-8">
    <div class="panel panel-info">
      <div class="panel-heading"><%=  markdown_to_html @wiki.title %></div>
      <div class="panel-body"><%= markdown_to_html @wiki.body %></div>
      <div class="panel-footer"><p>Created By:</p><%= @wiki.user.name %></div>
    </div>
  </div>

    <div class="col-md-8">
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-warning', data: {confirm: 'Are you sure you want to do that?'} %>
    <%= link_to "Back to Wiki List", wikis_path, class: 'btn btn-info' %>
  </div>
   </div>
  </div>
